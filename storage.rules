// Reglas pÃºblicas de Testimonio Vivo
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ðŸŽ¤ Fotos y audios de Testimonios
    match /testimonios/{testimonioId}/{fileName} {
      // Lectura solo para usuarios autenticados
      allow read: if request.auth != null;
      
      // Subida limitada a 10 MB
      allow create: if request.auth != null 
                    && request.resource.size < 10 * 1024 * 1024;
                    
      // EliminaciÃ³n permitida solo si estÃ¡ autenticado
      allow delete: if request.auth != null;
    }

    // ðŸ‘¤ Foto de perfil del usuario
    match /users/{userId}/profile.jpg {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ðŸ’¬ Multimedia de Chats (ImÃ¡genes, Audios, Archivos WebRTC)
    match /chats/{chatId}/{fileName} {
      allow read, write: if request.auth != null 
                         && request.resource.size < 15 * 1024 * 1024;
    }
  }
}

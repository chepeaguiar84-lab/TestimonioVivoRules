<html>
  <head>
    <title>Reglas p칰blicas de Testimonio Vivo</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 40px;
      }
      h1, h2 {
        color: #333;
      }
      pre {
        font-size: 20px;   /* 游녣 Texto grande */
        line-height: 1.6;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 8px;
        overflow-x: auto;
        white-space: pre-wrap; /* 游녣 Ajusta en pantallas peque침as */
        word-wrap: break-word; /* 游녣 Evita cortes raros */
      }
    </style>
  </head>
  <body>
    <h1>Reglas p칰blicas de Testimonio Vivo</h1>

    <h2>Firestore Rules</h2>
    <pre>
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 游녻 Perfiles de usuario: lectura para autenticados, escritura solo para el due침o
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 游닀 Testimonios: Lectura p칰blica, creaci칩n para autenticados, edici칩n solo para el autor
    match /testimonios/{testimonioId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorUid == request.auth.uid;
    }

    // 游눫 Salas de Chat y Se침alizaci칩n WebRTC
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }

      match /candidates/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }

    // 游니 Chats Legacy (compatibilidad)
    match /chats/{messageId} {
      allow read, write: if request.auth != null;
    }

    // 游눑 Planes de Suscripci칩n: Solo lectura p칰blica
    match /plans/{planId} {
      allow read: if true;
      allow write: if false;
    }

    // 游눯 Donaciones: Privacidad total por usuario y validaci칩n de identidad
    match /donations/{donationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
    </pre>
  </body>
